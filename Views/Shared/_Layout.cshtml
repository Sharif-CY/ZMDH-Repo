<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZMDH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/klacht.css" />
    <link rel="stylesheet" href="~/css/aanmelden.css" />



</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <a asp-controller="Home" asp-action="Index">
                    <img src="/Images/logo.png" alt="ZMDH-logo" width="60" height="60">
                </a>

                <ul>
                    <li><a class="home-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="ortho-link" asp-controller="Orthopedagogen" asp-action="Index">Orthopedagogen</a></li>
                    <li><a class="klacht-link" asp-controller="KlachtenProcedure" asp-action="Index">Klachten-procedure</a></li>
                    <li><a class="aanmelden-link" asp-controller="Aanmelden" asp-action="Index">Aanmelden</a></li>
                    <partial name="_LoginPartial"/>
                </ul>
                
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WDPR - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
