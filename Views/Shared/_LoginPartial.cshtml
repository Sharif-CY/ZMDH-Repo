@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li><a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Ingelogd als @UserManager.GetUserName(User)!</a></li>

    <li>
        <a>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Uitloggen</button>
        </form>
        </a>
    </li>
    <style>
        #logout{
            color: red !important;
            font-weight:bold;
        }
    </style>
}
else
{
    @* <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li> *@
    <li><a class="inloggen-link" id="login" asp-area="Identity" asp-page="/Account/Login">Inloggen</a></li>
}
</ul>
