@page
@model LoginModel

@{
    ViewData["Title"] = "Inloggen";
}

<style>
    .inloggen-link {
        color: #FF4A88 !important;
        font-weight: bold;
    }
</style>

<div id="i-section-1">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Wachtwoord</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">                            
                            <input asp-for="Input.RememberMe" />
                            Onthouden?
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Inloggen</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Wachtwoord vergeten?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nieuwe gebruiker toevoegen</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Email bevestiging opniew versturen</a>
                    </p>
                </div>
            </form>
    </div>
</div>
    
        
            
       


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}